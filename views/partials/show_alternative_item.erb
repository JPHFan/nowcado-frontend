<li style="width: 210px;">
  <div class="thumbnail alternative_item" item_id="<%= id %>" <%= "style=\"background:rgb(200,240,255);\"" if (defined?(prechecked) && prechecked) %>>
    <h6 style="height: 50px;"><%= name.length > 90 ? "#{cap_words(name)[0..89]}..." : cap_words(name) %></h6>
    <img <%= !img_url.nil? ? "src=\"#{settings.domain}#{img_url}\"" : "data-src=\"holder.js/200x200}\""  %> style="max-width:200px;height:200px;">
    <label><b>Rating: </b><%= render_partial(:rating, {:locals => {:rating => rating}}) %></label>
  </div>
</li>