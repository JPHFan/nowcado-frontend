<div>
  <div class="alert alert-error" style="display: none;"></div>
  <label><b>Rating: </b><%= render_partial(:rating, {:locals => {:rating => rating.nil? ? 3 : rating, :edit_hover => true}}) %></label>
  <textarea rows="6" style="width:98.5%;word-break:normal;" placeholder="Write your review here."><%= review.nil? ? "" : review.gsub(/<br[\s]*\/?>/,"\n") %></textarea>
  <button class="btn" type="<%= type %>_review" review-id="<%= review_id %>">Save Review</button>
  <button class="btn" type="<%= type %>_review" cancel-id="<%= review_id %>">Cancel Review</button>
</div>
